---
import GitHub from '../svg/GitHubBig.astro';
import CV from '../svg/CVBig.astro';
const { currentLanguage } = Astro.props;
---

<footer class="footer">
    <div class="footer-container">
        <div class="footer-glass">
            <div class="footer-content">
                <div class="footer-main">
                    <div class="footer-brand">
                        <h3 class="brand-name">Fran Cortés</h3>
                        <p class="brand-subtitle" data-i18n="footer-subtitle">
                            {currentLanguage === 'spanish' ? 'Ingeniero de Software & Investigador IA' : 'Software Engineer & AI Researcher'}
                        </p>
                    </div>
                    
                    <div class="footer-links">
                        <div class="link-group">
                            <a href="https://github.com/francordel" target="_blank" aria-label="GitHub" class="footer-link">
                                <GitHub/>
                                <span>GitHub</span>
                            </a>
                            <a id="cv-download" href="/CV_FranCortes.pdf" target="_blank" rel="noopener noreferrer" class="footer-link">
                                <CV/>
                                <span data-i18n="cv-text">
                                    {currentLanguage === 'spanish' ? 'Currículum' : 'Resume'}
                                </span>
                            </a>
                        </div>
                    </div>
                </div>
                
                <div class="footer-bottom">
                    <div class="footer-divider"></div>
                    <p class="copyright" id="footer-text" data-i18n="footer-text">
                        {currentLanguage === 'spanish' ? '© 2025 Fran Cortés Delgado - Todos los derechos reservados.' : '© 2025 Fran Cortés Delgado - All rights reserved.'}
                    </p>
                </div>
            </div>
        </div>
    </div>
</footer>

<script>
    // Actualizar el footer cuando cambie el idioma
    document.addEventListener('languageChanged', (event) => {
        if (event instanceof CustomEvent && event.detail && event.detail.language) {
            updateCvLink(event.detail.language);
        }
    });

    // Inicializar con el idioma actual
    document.addEventListener('DOMContentLoaded', () => {
        const currentLanguage = localStorage.getItem('language') || 'spanish';
        updateCvLink(currentLanguage);
    });

    // Función para actualizar el enlace del CV según el idioma
    function updateCvLink(language) {
        const cvLink = document.getElementById('footer-cv-link');
        if (cvLink) {
            const spanishUrl = cvLink.getAttribute('data-spanish-url');
            const englishUrl = cvLink.getAttribute('data-english-url');
            
            if (language === 'spanish' && spanishUrl) {
                cvLink.setAttribute('href', spanishUrl);
            } else if (language === 'english' && englishUrl) {
                cvLink.setAttribute('href', englishUrl);
            }
        }
    }
</script>

<style>
/* Glassmorphism Footer Styles */
.footer {
    position: relative;
    background: linear-gradient(135deg, 
        rgba(var(--blue-titles-color-rgb, 121, 112, 224), 0.1) 0%, 
        rgba(var(--blue-titles-color-rgb, 121, 112, 224), 0.05) 100%);
    padding: 4rem 2rem 2rem;
    margin-top: 4rem;
    overflow: hidden;
}

.footer::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: 
        radial-gradient(circle at 20% 50%, rgba(121, 112, 224, 0.1) 0%, transparent 50%),
        radial-gradient(circle at 80% 20%, rgba(121, 112, 224, 0.08) 0%, transparent 50%),
        radial-gradient(circle at 40% 80%, rgba(121, 112, 224, 0.06) 0%, transparent 50%);
    pointer-events: none;
}

.footer-container {
    max-width: 1200px;
    margin: 0 auto;
    position: relative;
    z-index: 1;
}

.footer-glass {
    background: rgba(255, 255, 255, 0.08);
    backdrop-filter: blur(20px);
    border-radius: 24px;
    border: 1px solid rgba(255, 255, 255, 0.12);
    padding: 3rem;
    box-shadow: 
        0 20px 40px rgba(0, 0, 0, 0.1),
        inset 0 1px 0 rgba(255, 255, 255, 0.1);
    position: relative;
    overflow: hidden;
}

.footer-glass::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 1px;
    background: linear-gradient(90deg, 
        transparent, 
        rgba(255, 255, 255, 0.2), 
        transparent);
}

.footer-content {
    color: white;
}

.footer-main {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 2rem;
    gap: 2rem;
}

.footer-brand {
    flex: 1;
}

.brand-name {
    font-size: 1.8rem;
    font-weight: 700;
    margin: 0 0 0.5rem 0;
    background: linear-gradient(135deg, #ffffff 0%, rgba(255, 255, 255, 0.8) 100%);
    background-clip: text;
    -webkit-background-clip: text;
    color: transparent;
}

.brand-subtitle {
    font-size: 1rem;
    color: rgba(255, 255, 255, 0.7);
    margin: 0;
    font-weight: 400;
}

.footer-links {
    display: flex;
    align-items: center;
}

.link-group {
    display: flex;
    gap: 1.5rem;
    align-items: center;
}

.footer-link {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.75rem 1.25rem;
    background: rgba(255, 255, 255, 0.05);
    border-radius: 16px;
    border: 1px solid rgba(255, 255, 255, 0.1);
    color: white;
    text-decoration: none;
    font-weight: 500;
    font-size: 0.9rem;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
    overflow: hidden;
}

.footer-link::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, 
        transparent, 
        rgba(255, 255, 255, 0.1), 
        transparent);
    transition: left 0.5s ease;
}

.footer-link:hover::before {
    left: 100%;
}

.footer-link:hover {
    transform: translateY(-2px);
    background: rgba(255, 255, 255, 0.1);
    border-color: rgba(255, 255, 255, 0.2);
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
}

.footer-link svg {
    width: 20px;
    height: 20px;
    fill: currentColor;
    flex-shrink: 0;
}

.footer-bottom {
    margin-top: 2rem;
}

.footer-divider {
    height: 1px;
    background: linear-gradient(90deg, 
        transparent, 
        rgba(255, 255, 255, 0.2), 
        transparent);
    margin-bottom: 1.5rem;
}

.copyright {
    text-align: center;
    font-size: 0.85rem;
    color: rgba(255, 255, 255, 0.6);
    margin: 0;
    font-weight: 400;
}

/* Responsive Design */
@media (max-width: 768px) {
    .footer {
        padding: 3rem 1rem 2rem;
        margin-top: 3rem;
    }

    .footer-glass {
        padding: 2rem;
        border-radius: 20px;
    }

    .footer-main {
        flex-direction: column;
        text-align: center;
        gap: 1.5rem;
        margin-bottom: 1.5rem;
    }

    .brand-name {
        font-size: 1.5rem;
    }

    .brand-subtitle {
        font-size: 0.9rem;
    }

    .link-group {
        justify-content: center;
        gap: 1rem;
    }

    .footer-link {
        padding: 0.6rem 1rem;
        font-size: 0.85rem;
    }

    .footer-link svg {
        width: 18px;
        height: 18px;
    }
}

@media (max-width: 480px) {
    .footer-glass {
        padding: 1.5rem;
        border-radius: 16px;
    }

    .brand-name {
        font-size: 1.3rem;
    }

    .brand-subtitle {
        font-size: 0.85rem;
    }

    .link-group {
        flex-direction: column;
        gap: 0.75rem;
        width: 100%;
    }

    .footer-link {
        width: 100%;
        justify-content: center;
        padding: 0.75rem;
    }

    .copyright {
        font-size: 0.8rem;
        line-height: 1.4;
    }
}
</style>
