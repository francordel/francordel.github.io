    }

    .hero-text {
        text-align: center;
        max-width: 800px;
    }

    .hero-title {
        font-size: 3.5rem;
        font-weight: 800;
        margin: 0 0 1rem 0;
        background: linear-gradient(135deg, #ffffff 0%, #b3d9ff 50%, #ffffff 100%);
        background-clip: text;
        -webkit-background-clip: text;
        color: transparent;
        line-height: 1.1;
    }

    .hero-subtitle {
        font-size: 1.3rem;
        font-weight: 400;
        opacity: 0.9;
        margin-bottom: 2rem;
    }

