    }

    .connect-info {
        flex: 1;
    }

    .connect-info h3 {
        font-size: 1.1rem;
        font-weight: 600;
        margin: 0 0 0.25rem 0;
        color: white;
    }

    .connect-info p {
        font-size: 0.9rem;
        opacity: 0.8;
        margin: 0;
    }

    .connect-arrow {
        font-size: 1.2rem;
