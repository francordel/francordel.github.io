{
  "compilerOptions": {
    "target": "ESNext",                                  
    "module": "ESNext",                                 
    "lib": ["DOM", "ESNext"],                            
    "allowJs": true,                                     
    "skipLibCheck": true,                                
    "esModuleInterop": true,                             
    "strict": false,                                     
    "forceConsistentCasingInFileNames": true,            
    "moduleResolution": "node",                          
    "resolveJsonModule": true,                           
    "isolatedModules": true,                             
    "noEmit": true,                                      
    "jsx": "preserve"                                    
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"]
}
